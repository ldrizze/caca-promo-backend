  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "debug app",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "debug"],
      "port": 9229,
      "restart": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/caca-promo-backend/main.js",
      "env": {
        "DB_USER": "root",
        "DB_PASS": "root",
        "DB_NAME": "cacapromo",
        "DB_HOST": "localhost",
        "DB_PORT": "3306"
      }
    }
  ]
}